{
	"printWidth": 100,
	"useTabs": true,
	"tabWidth": 2,
	"singleQuote": true,
	"semi": true,
	"trailingComma": "es5",
	"plugins": ["@prettier/plugin-php", "prettier-plugin-tailwindcss", "prettier-plugin-blade"],
	"overrides": [
		{
			"files": ["*.blade.php"],
			"options": {
				"parser": "blade"
			}
		}
	]
}
